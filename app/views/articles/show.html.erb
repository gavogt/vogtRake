<h1 align="center">Your comment has been made!</h1>
<head>
	<title>Comment made page</title>
</head>
<p>
	<strong>Title:</strong>
	<%= @article.title %>
</p>

<p>
	<strong>Text:</strong>
	<%= @article.text %>
</p>

<h3>Add a comment:</h3>
<%= form_for([@article, @article.comments.build]) do |f| %>
<section class = "container">
	<p>
		<%= f.label :commenter %>
		<br>
		<%= f.text_field :commenter %>
	</p>
	<p>
		<%= f.label :body %>
		<br>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit %>
	</p>
</section>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>